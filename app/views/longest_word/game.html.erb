<div class="container">
  <h1 class="text-center">Welcome to the longuest word game !!</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h3 class="text-center">Here is your grid</h3>
      <ul class="list-inline text-center">
        <% @grid.each do |letter| %>
          <li class="ltr">
            <h2><samp><em> <%= letter %></em></samp></h2>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12 col-md-6">
      <h3 class="text-center">What's your best shot ?</h3>
      <br>
      <form action="/score" method="get">
        <div class="form-group form-inline text-center">
          <input type="text" id="question" name="usr_answer" placeholder="beautiful" class="form-control input-lg">
          <input type="hidden" value= <%= @start_time.iso8601 %> name="start_time">
          <input type="hidden" value= <%= @grid.join %> name="grid">
          <input type="submit" value="Go on!" class="btn btn-primary">
        </div>
      </form>
    </div>
  </div>
</div>

